<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DashBoard">

    <androidx.cardview.widget.CardView
        android:id="@+id/navigation_banner"
        android:layout_width="50dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="5dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/image_hamburger"
            android:padding="7dp" />
    </androidx.cardview.widget.CardView>

    <!--    <com.google.android.material.navigationrail.NavigationRailView-->
    <!--        android:id="@+id/navigationRail"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="match_parent"-->
    <!--        android:clipToPadding="true"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:menu="@menu/navigation_menu" />-->
    <TextView
        android:id="@+id/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Welcome!"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_medium"
        android:textSize="25sp"
        />
    <TextView
        android:id="@+id/lets_find_sarcasm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/welcome"
        android:layout_marginEnd="70dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Let's find sarcasm"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/inter_medium"
        />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/header_cardView"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lets_find_sarcasm"
        android:layout_marginTop="50dp"
        app:cardElevation="20dp"
        app:cardCornerRadius="20dp">




        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_dashboard"
            android:layout_width="250dp"
            android:layout_height="350dp"
            app:lottie_rawRes="@raw/dashboard_person"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            />

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/footer_cardView_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/header_cardView"
        >
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/image_recognition"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="10dp"
            android:background="@color/white"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"

            android:layout_marginEnd="10dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:src="@drawable/image_gallery"
                android:padding="15dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:textAlignment="center"
                android:text="Image"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                />


        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/text_recognition"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:src="@drawable/image_text"
                android:padding="15dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:textAlignment="center"
                android:text="Text"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                />

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/voice_recognition"
            android:layout_width="100dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardElevation="10dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="90dp"
                android:src="@drawable/image_microphone"
                android:padding="15dp"
                android:layout_marginStart="10dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:textAlignment="center"
                android:text="Voice"
                android:textSize="15sp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/black"
                />

        </com.google.android.material.card.MaterialCardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>